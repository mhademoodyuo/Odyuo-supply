<body>
    <div class="container mt-5">
        <h1 class="text-center">UPI Payment QR Code Generator</h1>
        <form action="/generate-qr" method="POST" class="mt-4">
            <div class="mb-3">
                <label for="upiId" class="form-label">UPI ID</label>
                <input type="text" id="upiId" name="upiId" class="form-control" placeholder="example@upi" required>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Payee Name</label>
                <input type="text" id="name" name="name" class="form-control" placeholder="Enter Payee Name" required>
            </div>
            <div class="mb-3">
                <label for="amount" class="form-label">Amount (â‚¹)</label>
                <input type="number" id="amount" name="amount" class="form-control" placeholder="Enter Amount" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Generate QR Code</button>
        </form>
    </div>
</body>
</html>
